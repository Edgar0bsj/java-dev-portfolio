package toDoList;

public interface TarefasInterface {
	
//	Adicionar tarefa
//	Listar tarefas
//	Editar tarefa
//	Marcar tarefa como conclu√≠da
//	Excluir tarefa
//	Salvar e carregar tarefas de um arquivo (.txt ou .json)
	abstract void addTarefa(String nome, String descricao, boolean concluida);
	abstract void listarTarefas();
	abstract void editarTarefas();
	abstract void marcarTarefas();
	abstract void excluirTarefas();
	abstract void salvarTarefas();
	

}
